{
    "properties": {
        "service": {
            "type": "object",
            "description": "DC/OS service configuration properties",
            "properties": {
                "name": {
                    "description": "Name of this service instance",
                    "type": "string",
                    "default": "predator"
                },
                "cpus": {
                    "description": "CPU shares to allocate to each service instance.",
                    "type": "number",
                    "default": 0.1,
                    "minimum": 0.1
                },
                "mem": {
                    "description":  "Memory to allocate to each service instance.",
                    "type": "number",
                    "default": 256.0,
                    "minimum": 128.0
                },
                "internal_address": {
                    "description":  "Address of this service accessible from inside of Metronome cluster.",
                    "type": "string",
                    "default": "http://predator.marathon.l4lb.thisdcos.directory:80"
                },
                "external_address": {
                    "description":  "Address of this service accessible from outside of Metronome cluster.",
                    "type": "string"
                },
                "metronome_url": {
                    "description":  "Metronome URL (used for API).",
                    "type": "string",
                    "default": "http://metronome.mesos:9000"
                },
                "runner_docker_name": {
                    "description":  "Docker image of runner that runs predator tests.",
                    "type": "string",
                    "default": "zooz/predator-runner"
                }
            },
            "required": [
                "name",
                "cpus",
                "mem",
                "metronome_url",
                "internal_address"
            ]
        },
        "database": {
            "type": "object",
            "description": "Database configuration",
            "properties": {
                "database_type": {
                    "description":  "Type of database [CASSANDRA/SQLITE/POSTGRES/MSSQL/MYSQL].",
                    "type": "string",
                    "default": "SQLITE",
                    "enum": ["CASSANDRA", "SQLITE", "POSTGRES", "MSSQL", "MYSQL"]
                },
                "database_address": {
                    "description":  "Database address.",
                    "type": "string"
                },
                "database_username": {
                    "description":  "Database username.",
                    "type": "string"
                },
                "database_password": {
                    "description":  "Database password.",
                    "type": "string"
                },
                "database_name": {
                    "description":  "Name of database/keyspace.",
                    "type": "string"
                }
            },
            "required": [
                "database_type"
            ]
        }
    }
}